public class Array {
    private static Pessoas[] lista=new Pessoas[3];
    private static int indice=0;
   
   /**
    * 
    * @param p 
    */ 
    
    public static void inserir(Pessoas p) {
        p.setId(indice+1);
        lista[indice++]=p;
       
        
      }
    public static void mostrar() {
            for(int i=0; i<indice;i++) {
                System.out.println(lista[i]);
                
            
        }
        
        
        
          
    }
